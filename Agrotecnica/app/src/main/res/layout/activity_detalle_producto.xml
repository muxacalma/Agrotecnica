<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.androidnoobs.agrotecnica.agrotecnica.DetalleProducto">
    <ImageView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scaleType="centerCrop"
        android:alpha="0.7"
        android:src="@mipmap/barley"/>
    <TextView
        android:id="@+id/dpNombreProducto"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignStart="@+id/dpPrecio"
        android:layout_alignTop="@+id/dpImagen"
        android:text="Nombre Producto"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/dpPrecio"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignStart="@+id/dpStock"
        android:layout_below="@+id/dpNombreProducto"
        android:layout_marginTop="37dp"
        android:text="Precio"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/dpStock"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/dpPrecio"
        android:layout_marginTop="27dp"
        android:layout_toEndOf="@+id/dpComprar"
        android:text="Stock"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/dpDescricionProducto"
        android:layout_width="match_parent"
        android:layout_height="170dp"
        android:layout_above="@+id/dpComprar"
        android:layout_centerHorizontal="true"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:text="DescripciÃ³n producto"
        android:textStyle="bold" />

    <Button
        android:id="@+id/dpComprar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="36dp"
        android:onClick="realizarCompra"
        android:text="Comprar"
        android:textStyle="bold" />

    <ImageView
        android:id="@+id/dpImagen"
        android:layout_width="150dp"
        android:layout_height="150dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginTop="40dp"
        android:layout_marginStart="24dp"
        android:onClick="realizarCompra"
        app:srcCompat="?android:attr/actionModeBackground" />
</RelativeLayout>
