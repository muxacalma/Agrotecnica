<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.androidnoobs.agrotecnica.agrotecnica.DetalleProducto">

    <TextView
        android:id="@+id/dpNombreProducto"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/dpImagen"
        android:layout_marginStart="60dp"
        android:layout_toEndOf="@+id/dpImagen"
        android:text="Nombre Producto"
        android:textColor="@color/colorAccent"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/dpPrecio"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignStart="@+id/dpNombreProducto"
        android:layout_below="@+id/dpNombreProducto"
        android:layout_marginTop="20dp"
        android:text="Precio"
        android:textColor="@color/colorAccent"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/dpStock"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignStart="@+id/dpPrecio"
        android:layout_below="@+id/dpPrecio"
        android:layout_marginTop="27dp"
        android:text="Stock"
        android:textColor="@color/colorAccent"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/dpDescricionProducto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignEnd="@+id/dpNombreProducto"
        android:layout_below="@+id/dpImagen"
        android:layout_marginTop="15dp"
        android:text="DescripciÃ³n producto"
        android:textColor="@color/colorAccent"
        android:textSize="14sp"
        android:textStyle="bold" />

    <Button
        android:id="@+id/dpComprar"
        android:layout_width="100dp"
        android:layout_height="50dp"
        android:layout_alignParentBottom="true"
        android:layout_alignParentEnd="true"
        android:layout_marginBottom="32dp"
        android:layout_marginEnd="40dp"
        android:background="@drawable/btnfondo"
        android:onClick="realizarCompra"
        android:text="Comprar"
        android:textStyle="bold" />

    <ImageView
        android:id="@+id/dpImagen"
        android:layout_width="150dp"
        android:layout_height="150dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginStart="89dp"
        android:layout_marginTop="29dp"
        android:onClick="realizarCompra"
        app:srcCompat="?android:attr/actionModeBackground" />
</RelativeLayout>
